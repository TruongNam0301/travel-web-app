{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "header-max-length": [2, "always", 100],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "perf",
        "ci",
        "build",
        "revert"
      ]
    ]
  },
  "parserPreset": {
    "parserOpts": {
      "headerPattern": "^(\\w+-\\d+)\\/(\\w+):\\s(.+)$",
      "headerCorrespondence": ["scope", "type", "subject"]
    }
  }
}
